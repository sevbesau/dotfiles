#!/usr/bin/env sh

ROFI="rofi -dmenu -theme $XDG_CONFIG_HOME/rofi/list.rasi -i -p"

function queue {
  selection=$( echo -e "‚ùå Clear\n$( mpc playlist)" | $ROFI queue -multi-select -format "i s")
  case "$selection" in
    "") menu ;;
    *" Clear") mpc clear; menu ;;
    *) 
      echo -e "$selection"
      numbers=$( echo -e "$selection" | cut -d' ' -f1 | tac | xargs )
      for num in $numbers; do
        echo "del $num"
        mpc del "$num"
      done
      echo ""
      queue
      ;;
  esac
}

function songs {
  selection=$( echo -e "‚ûï Shuffle All\n$( mpc ls )" | $ROFI songs -multi-select )
  case "$selection" in
    "") menu ;;
    *" Shuffle All") 
      mpc clear
      mpc random on
      mpc add /
      mpc play
      ;;
    *) 
      while read -r song; do
        mpc add "$song"
      done < <( echo -e "$selection" )
      songs
      ;;
  esac
}

function playlists {
  existing_playlists="$( mpc lsplaylists )"
  selection=$( echo -e "üíæ Save\n$existing_playlists" | $ROFI playlists )
  case "$selection" in
    "") menu ;;
    *" Save") 
      playlist=$( echo -e "$existing_playlists" | $ROFI 'save to' )
      mpc rm "$playlist" 2> /dev/null
      mpc save "$playlist"
      playlists 
      ;;
    *) 
      mpc clear
      mpc load "$selection"
      mpc play
      ;;
  esac
}

function artists {
  selection=$( echo -e "$( mpc list artist | sed /^$/d )" | $ROFI artists )
  case "$selection" in
    "") menu ;;
    *) 
      mpc clear
      while read -r song; do
        mpc add "$song"
      done < <( mpc find artist "$selection" )
      mpc random on
      mpc play
      ;;
  esac
}

function genres {
  selection=$( echo -e "$( mpc list genre | sed /^$/d )" | $ROFI genres )
  case "$selection" in
    "") menu ;;
    *) 
      mpc clear
      while read -r song; do
        mpc add "$song"
      done < <( mpc find genre "$selection" )
      mpc random on
      mpc play
      ;;
  esac
}

function albums {
  # TODO prepend artist
  selection=$( echo -e "$( mpc -f "%artist% - %album%" ls | sort | uniq | grep "-" | sed '/ - $/d' )" | $ROFI albums )
  case "$selection" in
    "") menu ;;
    *) 
      album=$( echo -e "$selection" | sed 's/^.* - \(.*\)$/\1/' )
      mpc clear
      while read -r song; do
        mpc add "$song"
      done < <( mpc find album "$album" )
      mpc random on
      mpc play
      ;;
  esac
}

function menu {
  selection=$( echo -e "Queue\nSongs\nArtists\nGenres\nAlbums\nPlaylists" | $ROFI music ) 
  case "$selection" in
    "Queue") queue ;;
    "Songs") songs ;;
    "Artists") artists ;;
    "Genres") genres ;;
    "Albums") albums ;;
    "Playlists") playlists ;;
  esac
}

case "$1" in
  "next"|"prev"|"toggle"|"play"|"pause") 
    mpc "$1" ;;
  "shuffle")
    mpc clear
    mpc add /
    [[ "$( mpc )" =~ "random: off" ]] && mpc random
    mpc play
    ;;
  *) mpc update --wait; menu ;;
esac

