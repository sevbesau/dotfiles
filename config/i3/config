workspace 5 output DP-2-2
workspace 6 output DP-2-2
workspace 7 output DP-2-2
workspace 8 output DP-2-2
workspace 9 output DP-2-2

###---Application default workspace---###
assign [class="code-oss"] 1
assign [class="firefox"] 2
assign [class="MongoDB Compass"] 3
assign [class="Slack"] 4
assign [class="Thunderbird"] 4

###---SOUND---###
set $inc 	--no-startup-id amixer set Master 2%+
set $biginc --no-startup-id amixer set Master 5%+
set $dec 	--no-startup-id amixer set Master 2%-
set $bigdec --no-startup-id amixer set Master 5%-
set $mute 	--no-startup-id amixer -D pulse set Master 1+ toggle

set $reminc --no-startup-id incremovol
set $remdec --no-startup-id decremovol


###---Scratchpad---###
bindsym $mod+Shift+minus exec --no-startup-id urxvt -name dropdown
for_window [instance="dropdown"] floating enable
for_window [instance="dropdown"] move scratchpad
for_window [instance="dropdown"] resize set 900 400
bindsym $mod+minus scratchpad show

# Make the current window a scratchpad
bindsym $mod+plus move scratchpad


###---keybindings---###
# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

#bindsym $mod+m 			exec mansearch

bindsym XF86Favorites                     exec curl http://localhost:3210/v1/download

# Volume keys
bindsym XF86AudioRaiseVolume              exec pulsemixer --change-volume +5
bindsym XF86AudioLowerVolume              exec pulsemixer --change-volume -5
bindsym XF86AudioMute                     exec pulsemixer --toggle-mute
bindsym XF86AudioMicMute                  exec pulsemixer --toggle-mute --id $(pulsemixer --list-sources | grep 'Name: Built-in Audio Analog Stereo' | grep -Eo 'source-[0-9]+' | cut -d'-' -f 2)
bindsym XF86AudioPlay                     exec music toggle
bindsym XF86AudioPause                    exec music pause

# media keys
bindsym XF86AudioNext               			exec music next
bindsym XF86AudioPrev               			exec music prev
bindsym XF86AudioForward              		exec music seek +1
bindsym XF86AudioRewind              		  exec music seek -1


# brightness
bindsym XF86MonBrightnessUp               exec brightnessctl + 
bindsym XF86MonBrightnessDown             exec brightnessctl -

# take toggle the backlight
bindsym XF86Display 			                exec blight toggle

# firefox
bindsym $mod+Shift+f 					  					exec --no-startup-id "firefox"

# launcher
bindsym $mod+d 													  exec run

# power menu
bindsym $mod+Shift+e                      exec powermenu

# music menu
bindsym $mod+Shift+m 			                exec music

# open a menu
bindsym $mod+Shift+d                      exec menu

# open an emoji menu
bindsym $mod+a							  					  exec emoji

# start a terminal
bindsym $mod+Shift+Return 			 				  exec $term
bindsym $mod+Return            			      exec $term

# kill focused window
bindsym $mod+Shift+a 										  kill

# change focus
bindsym $mod+h													  focus left
bindsym $mod+j													  focus down
bindsym $mod+k													  focus up
bindsym $mod+l													  focus right
bindsym $mod+Left												  focus left
bindsym $mod+Down												  focus down
bindsym $mod+Up													  focus up
bindsym $mod+Right												focus right

# move focused window
bindsym $mod+Shift+h										  move left 20
bindsym $mod+Shift+j										  move down 20 
bindsym $mod+Shift+k										  move up 20 
bindsym $mod+Shift+l										  move right 20 
bindsym $mod+Shift+Left									  move left 20
bindsym $mod+Shift+Down									  move down 20 
bindsym $mod+Shift+Up										  move up 20 
bindsym $mod+Shift+Right								  move right 20 

# split in horizontal orientation
bindsym $mod+v													  split h; exec notify-send 'tile horizontally'
bindsym $mod+b													  split v; exec notify-send 'tile vertically'


# enter fullscreen mode for the focused container
bindsym $mod+f													  fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s													  layout stacking
bindsym $mod+z													  layout tabbed
bindsym $mod+e													  layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space								  floating toggle

# change focus between tiling / floating windows
bindsym $mod+space											  focus mode_toggle

# focus the parent container
bindsym $mod+q													  focus parent

# switch to workspace
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

