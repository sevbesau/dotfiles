###---Windows settings---###

# floating windows
for_window [class="Chromium-browser"] floating enable
for_window [class="Pavucontrol"] floating enable
for_window [class="Display"] floating enable
for_window [class="Thunderbird"] floating enable
for_window [class="Thunderbird" instance="Mail"] floating disable
#for_window [class="Thunar"] floating disable
for_window [class="GStreamer"] floating enable
for_window [class="mpv"] floating enable
for_window [class="feh"] floating enable
for_window [class="Sxiv"] floating enable
for_window [class="dmenu"] floating enable
for_window [title="Android Emulator"] floating enable



###---Basic Defenitions---###

# gaps setup
gaps inner 2
gaps outer 8
# only show gaps with multiple windows
smart_gaps on 

# hide all borders
hide_edge_borders both
# no borders
for_window [class="[.]*"] border none
# new_window 1pixel
default_border none

# other defenitions
set $mod Mod1
set $term urxvt
#exec "setxkbmap -layout be" # keyboard layout

